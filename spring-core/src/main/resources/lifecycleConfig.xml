<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean class="com.springcore.lifecycle.Samosa" name="samosa" init-method="init" destroy-method="destroy">
        <property name="price" value="20.0"/>
    </bean>

    <bean class="com.springcore.lifecycle.Pepsi" name="pepsi">
        <property name="price" value="35"/>
    </bean>

    <bean class="com.springcore.lifecycle.Tea" name="tea">
        <property name="name" value="Ginger tea"/>
    </bean>


</beans>